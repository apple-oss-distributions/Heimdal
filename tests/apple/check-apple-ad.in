if [ ${needed_unjoin} = yes ] ; then
    echo "unjoin"
    dsconfigad -remove $R -force -user bind -password apple
    killall -9 digest-service
fi

defaults delete /Library/Preferences/com.apple.Kerberos kcm


exit 0

